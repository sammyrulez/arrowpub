<!DOCTYPE html>
<html>
<head>
  <title>Arrowpub</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults , "swfobject" %>

  <%= csrf_meta_tag %>
</head>
<body>


<!-- wrap starts here -->
<div id="wrap">

	<!--header -->
	<div id="header">

		<h1 id="logo-text"><a href="index.html" title="">Arrows<span>Pub</span></a></h1>
		<p id="slogan">Red on yellow beat a fellow</p>

		<div id="header-links">
			<p>
				<% if current_user -%>
 Welcome <%= "#{h(current_user.email)}" -%>
  | <%= link_to "Profile", edit_user_registration_url -%>
  | <%= link_to 'Exit', destroy_user_session_url -%>
<% else %>
  <%= link_to "Login", new_user_session_url -%>
  | <%= link_to 'Signup', new_user_registration_url -%>
<% end %>
			</p>
		</div>

	<!--header ends-->
	</div>

	<!-- navigation starts-->
	<div  id="nav">

		<div id="light-brown-line"></div>

		<ul>
			<li id="current">
              <%=link_to 'Home' , root_url -%>
			</li>
			<li><a href="index.html">Ranges</a></li>
			<li><a href="index.html">Sessions</a></li>
			<li><a href="index.html">Equipment</a></li>
			<li><a href="index.html">About</a></li>
		</ul>

	<!-- navigation ends-->
	</div>

	<!-- content-wrap starts -->
	<div id="content-wrap">

		<div id="main">

          <div id="flashes">
        <% names = [:notice, :error, :warning, :message, :success] -%>
        <% for name in names %>
          <% if flash[name] %>
            <%= "<div id=\"#{name}\" class=\"#{name}\">#{flash[name]}</div>".html_safe  %>
          <% end %>
        <% end %>
      </div>

        <%= yield %>

		<!-- main ends -->
		</div>

		

	<!-- content-wrap ends-->
	</div>

	</div>

	<!-- footer starts -->
	<div id="footer">

		<p>
		    &copy; 2010 <strong>Your Company</strong>

            &nbsp;&nbsp;&nbsp;&nbsp;

		    <a href="http://www.bluewebtemplates.com/" title="Website Templates">website templates</a> by <a href="http://www.styleshout.com/">styleshout</a>

            &nbsp;&nbsp;&nbsp;&nbsp;

		    <a href="index.html">Home</a> |
   	        <a href="index.html">Sitemap</a> |
	        <a href="index.html">RSS Feed</a> |
            <a href="http://validator.w3.org/check?uri=referer">XHTML</a> |
		    <a href="http://jigsaw.w3.org/css-validator/check/referer">CSS</a>
   	    </p>

	<!-- footer ends -->
	</div>

<!-- wrap ends here -->
</div>

</body>
</html>
